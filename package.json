{
  "name": "j4n.io",
  "description": "RESTful shortlink service",
  "author": "Jan Heuermann",
  "license": "MIT",
  "homepage": "https://github.com/jotaen/j4n.io",
  "main": "app/serve.js",
  "engines": {
    "node": "5.5.0"
  },
  "scripts": {
    "start": "node ./app/bootstrap/server.js",
    "pretest": "npm run --silent linter",
    "test": "npm run unit-tests && npm run db-tests && npm run http-tests",
    "linter": "eslint app test ./app/http/serve.js",
    "coverage": "istanbul cover _mocha -- test/unit test/db test/http",
    "unit-tests": "mocha test/unit",
    "db-tests": "mocha test/db",
    "http-tests": "mocha test/http --delay",
    "statistics": "echo \"Lines of code:\\n\" && find app/ -name \"*.js\" | xargs wc -l"
  },
  "dependencies": {
    "basic-auth": "^1.0.3",
    "body-parser": "^1.15.0",
    "express": "^4.13.4",
    "joi": "^8.0.5",
    "mongodb": "^2.1.16",
    "morgan": "^1.6.1",
    "randomstring": "^1.1.4"
  },
  "devDependencies": {
    "codeclimate-test-reporter": "^0.3.1",
    "eslint": "^2.8.0",
    "eslint-config-standard": "^5.2.0",
    "eslint-plugin-promise": "^1.1.0",
    "eslint-plugin-standard": "^1.3.2",
    "istanbul": "^0.4.2",
    "mocha": "^2.4.5",
    "supertest": "^1.1.0"
  }
}
